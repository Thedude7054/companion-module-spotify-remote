{
	"name": "spotify-remote",
	"version": "2.0.0-0",
	"api_version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"build": "npx rimraf dist && npx typescript@~4.5 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"author": "Peter Stather",
	"license": "MIT",
	"keywords": [
		"Spotify"
	],
	"manufacturer": "Spotify",
	"product": "Web API and Controller",
	"shortname": "Spotify",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^14"
	},
	"dependencies": {
		"@types/node": "^14.18.12",
		"@types/spotify-api": "^0.0.14",
		"got": "^11.8.3",
		"p-queue": "^6.6.2",
		"type-fest": "^2.12.2"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "~2.0.0",
		"typescript": "~4.5"
	}
}
