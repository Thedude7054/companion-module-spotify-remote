{
	"name": "spotify-remote",
	"version": "2.0.0-0",
	"api_version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"build": "npx rimraf dist && npx typescript@~4.5 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts --ext .js --ignore-pattern dist",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"author": "Peter Stather",
	"license": "MIT",
	"keywords": [
		"Spotify"
	],
	"manufacturer": "Spotify",
	"product": "Web API and Controller",
	"shortname": "Spotify",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint-fix"
		]
	},
	"engines": {
		"node": "^14"
	},
	"dependencies": {
		"@types/node": "^14.18.1",
		"@types/spotify-web-api-node": "^5.0.4",
		"spotify-web-api-node": "^5.0.2",
		"type-fest": "^2.8.0"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.4.1",
		"typescript": "~4.5"
	}
}
